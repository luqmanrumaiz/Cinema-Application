<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CinemaApplication" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_yellow</item>

        <item name="fontFamily">@font/poppins</item>

        <!-- This sets the Color of Components in the App like Checkboxes or Switches to Yellow . -->
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="HomePageButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>

